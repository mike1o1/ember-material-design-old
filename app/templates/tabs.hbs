<div class="doc-content" layout="column">
    <div flex layout="column" style="z-index: 1;">

        <div class="doc-description">
            <p>The Dynamic Tabs demo shows how internal tab views can be easily used.</p>
        </div>

        <section class="demo-container {{showSourceClass}}">

            {{#md-toolbar classNames='demo-toolbar'}}
                <div class="md-toolbar-tools">
                    <span>Dynamic Tabs</span>
                    <span flex></span>
                    {{#md-button action='showSource' layoutType="row" layout-align="center center" style='min-width: 72px;'}}
                        {{md-icon md-svg-src='images/icons/ic_visibility_24px.svg' style='margin: 0 4px 0 0;'}}
                        <span>Source</span>
                    {{/md-button}}
                </div>
            {{/md-toolbar}}

            {{#md-tabs style='border-top: solid 1px #00ADC3;' classNameBindings='showSource::ng-hide'
                classNames='demo-source-tabs'
                tabs=sourceFiles md-selected=0}}
                {{#md-tab-header-items}}
                    {{#each sourceFiles as |tab index|}}
                        {{#md-tab tab=tab position=index}}
                            {{tab.name}}
                        {{/md-tab}}
                    {{/each}}
                {{/md-tab-header-items}}
                {{#md-tabs-content}}
                    {{#each sourceFiles as |tab index|}}
                        {{#md-tab-content tab=tab position=index}}
                            <md-content md-scroll-y class="demo-source-container">
                                {{code-snippet name=tab.content }}
                            </md-content>
                        {{/md-tab-content}}
                    {{/each}}
                {{/md-tabs-content}}
            {{/md-tabs}}



            <demo-include class="md-whiteframe-z1 demoDynamicTabs">


                <div class="demo-content ">

                    <div class="display-content">


                        <div class="sample" layout="column">

                            {{#md-tabs md-selected=selectedIndex flex='' tabs=tabs}}

                                {{#md-tab-header-items}}
                                    {{#each tabs as |tab index|}}
                                        {{#md-tab tab=tab position=index}}{{tab.title}}{{/md-tab}}
                                    {{/each}}
                                {{/md-tab-header-items}}

                                {{#md-tabs-content}}
                                    {{#each tabs as |tab index|}}
                                        {{#md-tab-content tab=tab position=index}}
                                            <div class="demo-tab" layout="column" layout-align="space-around center">
                                                <div>
                                                    {{tab.content}}
                                                </div>
                                                {{#md-button class="md-primary md-raised" action='removeTab'}}
                                                    Remove Tab
                                                {{/md-button}}
                                            </div>
                                        {{/md-tab-content}}

                                    {{/each}}
                                {{/md-tabs-content}}

                            {{/md-tabs}}

                            <form layout="column" style="padding-top:20px;padding-left:20px;">
                                <div layout="row" layout-sm="column" layout-margin>
                                    {{#md-input-container value=selectedIndex}}
                                        <label for="activeIndex">Active Index</label>
                                        {{md-input type="text" id="activeIndex" disabled=true}}
                                    {{/md-input-container}}

                                    {{#md-input-container value=selectedTab.title}}
                                        <label for="activeTitle">Active Title</label>
                                        {{md-input type="text" id="activeTitle"}}
                                    {{/md-input-container}}
                                </div>

                                <div layout="row" layout-sm="column" layout-margin>
                                    <span class="title">Add a new Tab:</span>
                                    {{#md-input-container value=tTitle}}
                                        <label for="label">Label</label>
                                        {{md-input type="text" id="label"}}
                                    {{/md-input-container}}
                                    {{#md-input-container value=tContent}}
                                        <label for="content">Content</label>
                                        {{md-input type="text" id="content"}}
                                    {{/md-input-container}}
                                    {{#md-button class="add-tab md-primary" type="submit" style="max-height: 40px" action='addTab'}}
                                        Add Tab{{/md-button}}
                                </div>
                            </form>


                        </div>


                    </div>

                </div>


            </demo-include>


        </section>
    </div>
</div>


<div class="doc-content" layout="column">
    <div flex layout="column">

        <section class="demo-container">

            <demo-include class="md-whiteframe-z1 contentdemoBasicUsage">
                <div class="demo-content">

                    <div class="display-content">
                        {{#md-toolbar class="md-theme-light"}}
                            <h1 class="md-toolbar-tools">
                                <span>Full Bleed</span>
                            </h1>
                        {{/md-toolbar}}

                        <md-content>
                            <md-list>
                                {{#each item in messages}}


                                    <md-item>
                                        <md-item-content>
                                            <div class="md-tile-content">
                                                <h3>{{item.what}}</h3>
                                                <h4>{{item.who}}</h4>

                                                <p>
                                                    {{item.notes}}
                                                </p>
                                            </div>
                                        </md-item-content>
                                        <md-divider ng-if="!$last"></md-divider>
                                    </md-item>
                                {{/each}}
                            </md-list>
                        </md-content>

                        {{#md-toolbar class="md-theme-light"}}
                            <h1 class="md-toolbar-tools">
                                <span>Inset</span>
                            </h1>
                        {{/md-toolbar}}

                        <md-content>
                            <md-list>
                                {{#each item in messages}}
                                    <md-item ng-repeat="item in messages">
                                        <md-item-content>
                                            <div class="md-tile-left">
                                                <img {{bind-attr src=item.face alt=item.who}} class="face">
                                            </div>
                                            <div class="md-tile-content">
                                                <h3>{{item.what}}</h3>
                                                <h4>{{item.who}}</h4>

                                                <p>
                                                    {{item.notes}}
                                                </p>
                                            </div>
                                        </md-item-content>
                                        <md-divider md-inset ng-if="!$last"></md-divider>
                                    </md-item>
                                {{/each}}
                            </md-list>
                        </md-content>
                    </div>


                </div>
            </demo-include>




        </section>

    </div>
</div>

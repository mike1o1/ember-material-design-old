<div class="sample" layout="column">

    {{#md-tabs md-selected=selectedIndex flex='' tabs=tabs}}

        {{#md-tab-header-items}}
            {{#each tabs as |tab index|}}
                {{#md-tab tab=tab position=index}}{{tab.title}}{{/md-tab}}
            {{/each}}
        {{/md-tab-header-items}}

        {{#md-tabs-content}}
            {{#each tabs as |tab index|}}
                {{#md-tab-content tab=tab position=index}}
                    <div class="demo-tab" layout="column" layout-align="space-around center">
                        <div>
                            {{tab.content}}
                        </div>
                        {{#md-button class="md-primary md-raised" action='removeTab'}}
                            Remove Tab
                        {{/md-button}}
                    </div>
                {{/md-tab-content}}

            {{/each}}
        {{/md-tabs-content}}

    {{/md-tabs}}

    <form layout="column" style="padding-top:20px;padding-left:20px;">
        <div layout="row" layout-sm="column" layout-margin>
            {{#md-input-container value=selectedIndex}}
                <label for="activeIndex">Active Index</label>
                {{md-input type="text" id="activeIndex" disabled=true}}
            {{/md-input-container}}

            {{#md-input-container value=selectedTab.title}}
                <label for="activeTitle">Active Title</label>
                {{md-input type="text" id="activeTitle"}}
            {{/md-input-container}}
        </div>

        <div layout="row" layout-sm="column" layout-margin>
            <span class="title">Add a new Tab:</span>
            {{#md-input-container value=tTitle}}
                <label for="label">Label</label>
                {{md-input type="text" id="label"}}
            {{/md-input-container}}
            {{#md-input-container value=tContent}}
                <label for="content">Content</label>
                {{md-input type="text" id="content"}}
            {{/md-input-container}}
            {{#md-button class="add-tab md-primary" type="submit" style="max-height: 40px" action='addTab'}}Add
                Tab{{/md-button}}
        </div>
    </form>
</div>
